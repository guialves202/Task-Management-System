<div class="logo-div">
    <a href="/home">
        <i class="las la-rocket"></i>
        <h1>Spacelaxy</h1>
    </a>
</div>

<div class="main">
    <div class="main-card">
          <div class="main-text">
              <h1>Manage your tasks and increase your productivity</h1>
          </div>
          <div class="main-btn">
              <button class="btn-primary" onclick="showForm()">Start Now</button>
          </div>
    </div>
    <div class="form-card">
        <form action="/home/login" method="post" class="main-form">
            <div class="text-div">
                <h2>Sign In</h2>
            </div>
            <div class="email-div">
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email">
            </div>
            
            <div class="password-div">
                <label for="password">Password</label>
                <input type="password" name="password" id="password">
            </div>
            <div class="main-btn">
                <button class="btn-primary">Sign In</button>
            </div>
            <div class="change-form">
                <p>Don't have an account? <button onclick="showForm2(event)">Click here</button></p>
            </div>
        </form>
    </div>
    <div class="form-card">
      <form action="/home/register" method="post" class="main-form">
          <div class="text-div">
              <h2>Sign Up</h2>
          </div>
          <div class="name-div">
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
        </div>
          <div class="email-div">
              <label for="email2">E-mail</label>
              <input type="email" name="email2" id="email2">
          </div>
          
          <div class="password-div">
              <label for="password2">Password</label>
              <input type="password" name="password2" id="password2">
          </div>
          <div class="main-btn">
              <button class="btn-primary">Sign Up</button>
          </div>
          <div class="change-form">
            <p>Already have an account? <button onclick="showForm3(event)">Click here</button></p>
        </div>
      </form>
  </div>
</div>